# Twilio (optional): enable signature validation + forward calls
# Get Auth Token from Twilio Console → Account Info
TWILIO_AUTH_TOKEN=""
# Account SID (starts with AC...), used only for test-call endpoint (optional)
TWILIO_ACCOUNT_SID=""
# Your Twilio company number (E.164, e.g. +14436650603), used only for test-call endpoint (optional)
TWILIO_NUMBER=""
# If set, inbound calls will be forwarded to this number (E.164 recommended, e.g. +14105550188)
TWILIO_FORWARD_TO=""
# Set to 0 to disable signature validation (not recommended)
TWILIO_VALIDATE_SIGNATURE="1"

# Lead rescue automation (demo-safe defaults)
# SLA minutes (Lead Truth Ledger)
# - Overdue = handled_at is NULL and now-created_at > SLA_MINUTES
# - Also used as the default SLA for new leads unless SLA_DEFAULT_MINUTES is set.
SLA_MINUTES="15"
# Back-compat: if you still set this, it overrides SLA_MINUTES for due-time computation
SLA_DEFAULT_MINUTES="15"
# Escalate this many minutes after SLA due time (logs an escalation event)
ESCALATE_AFTER_MINUTES="10"
# Default "log" for demos (no SMS/email is sent). Future: sms/email.
AUTOMATION_MODE="log"

# Email (Resend) — production sender (optional for testing)
# In test mode, FROM_EMAIL defaults to onboarding@resend.dev if unset.
FROM_EMAIL="Leads <alerts@your-domain.com>"
COMPANY_NAME="HVAC Service"
COMPANY_PHONE="(000) 000-0000"
# Optional: used in email bodies to link back to the dashboard
DASHBOARD_URL=""

# Missed-call SMS rescue (requires AUTOMATION_MODE="sms" + Twilio creds)
# URL to send the lead back to your request form; default is "/#request" on the same host.
RESCUE_FORM_PATH="/#request"
# Keyword that triggers immediate callback bridging (case-insensitive)
RESCUE_YES_KEYWORD="YES"

